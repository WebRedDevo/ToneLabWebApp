@import 'inc/fonts.styl'

@import 'plugins/wrd-reset.styl'
@import 'plugins/wrd-ui.styl'
@import 'plugins/wrd-atomic.styl'

body
  &[modal='open']
    position fixed
    width 100%
    .header,.main,.footer
      filter blur(8px)
  &[calendar='open']
    .header--main
      padding-bottom 75px
      &__date
        opacity 1
        transform scale(1)

    .main
      margin-top -35px
    .section--planned
      &__articles
        margin-top 0
      h2
        display none
.container
  max-width 375px
  left 0
  right 0
  margin auto
.pd-28
  padding-left 28px
  padding-right 28px

.main
  overflow hidden
  margin-top 17px
  padding-bottom 90px
  transition .33s
.section
  h2
    color #4e5067
    font-size 18px
    font-weight 600
@import 'inc/header--main.styl'
@import 'inc/header--form.styl'
@import 'inc/footer.styl'


.section--nothing-found
  margin-top 50px
  .icon
    fill #4e5067
    width 125px
    height 125px
  p
    color #4e5067
    font-size 25px
    margin-top 15px

.modal
  position fixed
  top 0
  bottom 0
  left 0
  right 0
  background rgba(0, 0, 0, 0)
  z-index -3
  transform translateZ(0)
  &.open
    background rgba(0, 0, 0, 0.85)
    z-index 3
    .form--order-check
      transform scale(1)
      opacity 1

.form--order-check
  transform scale(0.5)
  transition opacity .23s, transform .33s
  opacity 0
  width 100%
  margin 0 28px
  .button-modal
    font-size 21px
    padding 13px 16px
    border-radius 5px
    font-weight 300
    font-family 'Avenir Next Cyr'
    width 100%
    background 0
    &:last-child
      margin-top 13px
    &--fulfilled
      color lightgreen
      border 1px solid
    &--unfulfilled
      color tomato
      border 1px solid
    &--add
      color #fff
      border 1px solid

@import 'section/section--planned.styl'
@import 'section/section--timetable.styl'
@import 'section/form--add-order.styl'
@import 'section/section--login.styl'
@import 'section/wish-list.styl'



@import 'adaptive/adaptive.styl'
