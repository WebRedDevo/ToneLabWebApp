.section--planned
  &__articles
    margin-top 20px
  &__wrap
    width max-content
    transform translateX(28px)
.article-planned
  box-shadow 0 5px 12px rgba(140, 140, 140, 0.16)
  border-radius 10px
  background-color #ffffff
  padding 12px 19px 25px
  margin-right 10px
  width 166px
  position relative
  &:last-child
    margin-right 0
  &.fulfilled
    background-color #deffde
    .article-planned__check
      background #deffde
  &.unfulfilled
    background-color #ffd0c7
    .article-planned__check
      background #ffd0c7
  &__time
    color rgba(43, 47, 62, 0.54)
    font-size 10px
    font-weight 600
  &__check
    width 17px
    height 17px
    margin 10px
    position absolute
    right 0
    top 0
    border 1px solid #ffb045
    border-radius 50%
    background #fff
  h3
    color #2b2f3e
    font-family "Avenir Next Cyr"
    font-size 10px
    font-weight 700
    text-transform uppercase
    margin-top 12px
    a
      color #2b2f3e
  p
    color #2b2f3e
    font-family "Avenir Next Cyr"
    font-size 9px
    font-weight 500
    margin-top 15px
