.section--timetable
  h2
    margin-top 30px
  &__days
    margin-top 27px



.button--day
  color #4e5067
  font-size 10px
  font-weight 800
  background 0
  width 30px
  height 30px
  border-radius 50%
  &.active
    background-color #ffb146
    


.timetable
  margin-top 15px
  &__item
    &.active
      position relative
      &:before
        content ''
        position absolute
        left -16px
        top 0
        bottom 0
        margin auto
        width 6px
        height 6px
        border-radius 50%
        background-color #ff943f
  &__time
    opacity 0.6
    color #2b2f3e
    font-size 10px
    font-weight 600
  &__tasks
    border-bottom 1px solid rgba(71, 181, 190, 0.4)
    padding 11px 7px
    width 100%


.button--task
  height 18px
  width 100%
  border-radius 6px
  margin-right 10px
  &.button--orange
    background-image linear-gradient(196deg, #ffbd4f 0%, #ff8827 100%)
  &.button--green
    background-color #47b5be
  &.task--finished
    opacity 0.4
  &:last-child
    margin-right 0
