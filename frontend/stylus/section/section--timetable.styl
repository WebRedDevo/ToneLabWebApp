.section--timetable
  .section__heading
    margin-top 30px
  &__days
    margin-top 27px

  &[view='min-info']
    .section__heading
      .icon
        fill #adaeb4
    .article-planned
      height 20px
      &__info
        opacity 0
      &.color-1
        background-image #47b5be
      &.color-2
        background-image #ffbd4f



.button--day
  font-size 10px
  font-weight 700
  background 0
  &.active
    .dayWeek
      &:before
        background-color #d8d8d8

  &.current
    .dayWeek
      &:before
        border 2px dotted #ffb146
  &.current&.active
      .dayWeek
        &:before
          background-color #ffb146


  .dayWeek
    color #4e5067
    width 30px
    height 30px
    border-radius 50%
    position relative
    &:before
      content ''
      position absolute
      top 0
      left 0
      right 0
      bottom 0
      border-radius 50%
      z-index -1
      transition .33s
      transform scale(0)

  .dayNum
    margin-top 7px
    color #adaeb4
  &.active,&.current
    .dayWeek
      &:before
        transform scale(1)



.timetable
  margin-top 15px
  &__wrap
    width max-content
  &__item
    width 320px
    margin-right 50px

    &.active
      position relative
      &:before
        content ''
        position absolute
        left -16px
        top 0
        bottom 0
        margin auto
        width 6px
        height 6px
        border-radius 50%
        background-color #ff943f
  &__time
    opacity 0.6
    color #2b2f3e
    font-size 10px
    font-weight 600

  &__tasks
    border-bottom 1px solid rgba(71, 181, 190, 0.4)
    padding 11px 7px
    width 100%
    overflow hidden
    min-height 50px
    &_wrap
      width max-content


    &.one-order
      .article-planned
        width 280px
    .article-planned
      border-radius 6px
      padding 15px
      padding-right 25px
      &.draggable
        transform rotate(5deg)
        position absolute
        z-index 9
      h3
        margin-top 0

      width calc(270px / 2)


.button--task
  min-height 20px
  width 100%
  border-radius 6px
  margin-right 10px
  p
    font-family "Avenir Next Cyr"
    font-size 13px
    font-weight 500
    margin-top 4px

  &.button--orange
    background-image linear-gradient(196deg, #ffbd4f 0%, #ff8827 100%)
    p
      color #2b2f3e
  &.button--green
    background-color #47b5be
    p
      color #fff
  &.task--finished
    opacity 0.4
    p
      color #333
  &:last-child
    margin-right 0
