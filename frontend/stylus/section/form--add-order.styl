.form
  label
    margin-top 25px
    h6
      color rgba(37, 45, 61, 0.65)
      font-size 18px
      font-weight 500
  &__input
    border-bottom 1px solid #e1e3e5
    color rgba(37, 45, 61, 1)
    font-size 18px
    font-weight 500
    padding-bottom 15px
    margin-top 25px
    width 100%
    background #fff
    transition .23s
    &.warning
      border-bottom 1px solid tomato
    &:placeholder
      color rgba(37, 45, 61, 0.65)



.modal--auto-list
  padding 0 28px

.button--close-modal
  position relative



.auto-list
  background #fff
  opacity 0
  transform translateY(475px)
  transition opacity .23s, transform .33s
  width 100%
  max-height 475px
  overflow auto
  padding  28px
  box-shadow 0 0 15px rgba(0,0,0, .12)
  border-radius 7px 7px 0 0
  &__item
    border-bottom 1px solid #e1e3e5
    padding 15px 0
    .icon-left-arrow-chevron
      width 18px
      height 18px
      fill #333
      transform rotate(-90deg)
    .auto-icon
      width 35px
      height 35px
      margin-right 15px
    h6
      color #333
