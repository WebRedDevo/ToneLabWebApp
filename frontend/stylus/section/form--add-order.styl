.form
  label
    margin-top 25px
    position relative
    h6
      color rgba(37, 45, 61, 0.65)
      font-size 18px
      font-weight 500
  &__input
    border-bottom 1px solid #e1e3e5
    color rgba(37, 45, 61, 1)
    font-size 18px
    font-weight 500
    padding-bottom 15px
    margin-top 25px
    width 100%
    background #fff
    transition .23s
    &.warning
      border-bottom 1px solid tomato
    &:placeholder
      color rgba(37, 45, 61, 0.65)


.button--select-car
  width 30px
  height 30px
  background #ff8827
  position absolute
  right 10px
  border-radius 50%
  padding 7px
  .icon
    width 100%
    height 100%
    fill #fff



.modal--auto-list,.modal--model-list
  padding 0 28px
.modal-wrap
  opacity 0
  transform translateY(175px)
  transition opacity .23s, transform .33s
  width 100%
.button--close-modal
  position relative

.modal--model-list
  .auto-name
    border-bottom 0
    h6
      color #fff
    .icon-left-arrow-chevron
      fill #fff
      transform rotate(90deg)
.auto-list
  background #fff
  width 100%
  max-height 475px
  overflow auto
  padding  28px
  box-shadow 0 0 15px rgba(0,0,0, .12)
  border-radius 7px 7px 0 0
  &__item
    border-bottom 1px solid #e1e3e5
    padding 15px 0
    .icon-left-arrow-chevron
      width 18px
      height 18px
      fill #333
      transform rotate(-90deg)
    .auto-icon
      width 35px
      height 35px
      margin-right 15px
    h6
      color #333
