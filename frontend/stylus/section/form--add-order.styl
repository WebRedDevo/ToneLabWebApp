.form
  label
    margin-top 25px
    h6
      color rgba(37, 45, 61, 0.65)
      font-size 18px
      font-weight 500
  &__input
    border-bottom 1px solid rgba(40, 55, 71, 0.14)
    color rgba(37, 45, 61, 1)
    font-size 18px
    font-weight 500
    padding-bottom 15px
    margin-top 25px
    width 100%
    background #fff
    transition .23s
    &.warning
      border-bottom 1px solid tomato
    &:placeholder
      color rgba(37, 45, 61, 0.65)
