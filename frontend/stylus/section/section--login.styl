.main--login
  background-color #252d3d
  margin-top 0

.section--login
  margin 20px
  h1
    color #ffffff
    font-size 20px
  p
    color #ffffff
    font-size 17px
    margin-top 7px

.form--login
  margin-top 12px
  label
    padding 15px 20px
    border-radius 4px
    width 280px
    margin-top 10px
    background #fff
    .icon
      width 15px
      height 15px
      fill #ff8827
    input
      margin-left 10px
      font-size 16px
      color #333
      &:-internal-autofill-selected
        background-color #fff !important

  .button--login
    background-color #ff8827
    border-radius 50%
    margin-top 20px
    padding 10px
    .icon
      width 28px
      height 28px
      fill #fff
